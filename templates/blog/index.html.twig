{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="articles">
    {% for article in articles %}
        <article>
            <h2>{{article.title}}</h2>
            <div class="metadata">Ecrit le {{article.createdAt | date('d/m/y')}} Ã  {{article.createdAt | date('H:i')}}</div>
            <div class="content">
                <img src="{{article.Image}}" width="350px" height="150px" alt=""/>
                <br/>
                {{article.content | raw}}
                <br/>
                <a href="{{ path('blog_show',{'id':article.id})}}" class="btn btn-primary">Lire plus</a>
            </div>
        </article>
    {% endfor %}
</section>
{% endblock %}
